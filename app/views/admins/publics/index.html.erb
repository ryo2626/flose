<div class="row">
  <div class="col-6 offset-3 text-center">
    <h3>空白検索で全ての利用者</h3>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-3 text-center">
    <%= search_form_for @search, url:admins_publics_path do |f| %>
      <%= f.search_field :lastname_cont, :placeholder => "名字で曖昧検索", class: "form-control-lg" %>
      <%= f.submit "検索", class: "btn-lg" %>
    <% end %>
  </div>
</div>

<ul>
  <li><a href="#active" class="text-success h3">利用者一覧へ</a></li>
  <li><a href="#deleted" class="text-success h3">凍結中一覧へ</a></li>
</ul>

<section id="active">
<h2><span class="text-secondary">■</span>利用者一覧</h2>
<% @result.each do |u| %>
  <table class="table">
  	<thead class="thead">
  		<tr class="table-secondary">
  		<th><h6><%= u.lastname_kana %>　<%= u.firstname_kana %></h6>
  				<h5><%= u.lastname %>　<%= u.firstname %></h5>
  		<th>ニックネーム:　<%= u.nickname %>
  		<th><%= link_to "ユーザー詳細・編集", edit_admins_public_path(u), class: "btn btn-light" %>
  	</thead>
  	<tbody class="tbody">
  		<tr class="table-light">
  		<td>電話番号:　<%= u.phone %>
			<td>Email:　<%= u.email %>
			<td>レシピ投稿:　<%= u.recipes.count %>件
		</tbody>
	</table>
<% end %>
<%= paginate @result %>
</section>

<section id="deleted">
<h2><span class="text-secondary">■</span>凍結中利用者一覧</h2>
<% @result_d.each do |u| %>
  <table class="table">
    <thead class="thead">
      <tr class="table-secondary">
      <th><h6><%= u.lastname_kana %>　<%= u.firstname_kana %></h6>
          <h5><%= u.lastname %>　<%= u.firstname %></h5>
      <th>ニックネーム:　<%= u.nickname %>
      <th><%= link_to "ユーザー詳細・編集", edit_admins_public_path(u), class: "btn btn-light" %>
    </thead>
    <tbody class="tbody">
      <tr class="table-light">
      <td>電話番号:　<%= u.phone %>
      <td>Email:　<%= u.email %>
      <td>レシピ投稿:　<%= u.recipes.count %>件
    </tbody>
  </table>
<% end %>
<%= paginate @result_d %>
</section>

<div id="back">
  <a href="#">
    <%= image_tag 'up.png', :size =>'60x60', class: "img" %>
  </a>
</div>