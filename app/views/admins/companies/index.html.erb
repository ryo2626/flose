<h1>企業一覧</h1>

<% @company.each do |c| %>
  <table class="table">
  	<thead class="thead">
  		<tr class="table-secondary">
  		<th><h3><%= c.company_name %></h3>
  		<th><th>
  			<%= link_to "企業詳細・編集", edit_admins_company_path(c), class: "btn btn-light" %>
  	</thead>
  	<tbody class="tbody">
  		<tr class="table-light">
  		<td>電話番号:　<%= c.phone %>
			<td>Email:　<%= c.email %>
			<td>投稿件数:　<%= c.commodities.count %>

		</tbody>
	</table>
<% end %>