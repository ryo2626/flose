<div class="container-fluid">

  <div class ="row">
    <div class =" mx-auto">
      <div class ="col-12">
        <h2>企業様 新規登録</h2>
      </div>

  <div class ="row">
    <div class ="mx-auto">
      <div class ="col-12">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, :size=>"1", autofocus: true, autocomplete: "企業名", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, :size=>"1", autofocus: true, autocomplete: "メールアドレス", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :postalcode %>（ハイフンなし）
      <%= f.text_field :postalcode, autofocus: true, autocomplete: "郵便番号", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, autofocus: true, autocomplete: "住所", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :phone %>（半角で入力）
      <%= f.text_field :phone, autofocus: true, autocomplete: "電話番号", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :password %>（６文字以上）
      <%= f.password_field :password, autocomplete: "パスワード", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit "会員登録" %>
    </div>
  <% end %>

<%= render "devise/links" %>

      </div>
    </div>
  </div>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bubbly-bg@1.0.0/dist/bubbly-bg.js" class="public"></script>