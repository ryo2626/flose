<div class ="row mt-5">
  <div class ="col-12 col-lg-6 offset-lg-3">
    <div class="card border-info w-100">
      <div class="card-header text-center alert-info border-info text-dark">
        <h2>企業様 新規登録</h2>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/error_messages", resource: resource %>

          <h3 class="mt-3"><span class="text-info">■</span>企業名</h3>
          <%= f.text_field :company_name, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>メールアドレス</h3>
            <%= f.email_field :email, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>郵便番号<span class="h5 text-secondary mt-4">※半角で入力 ※ハイフンなし</span></h3>
            <%= f.text_field :postalcode, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>住所<span class="h5 text-secondary mt-4">※50文字以内</span></h3>
            <%= f.text_field :address, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>電話番号<span class="h5 text-secondary mt-4">※半角で入力 ※ハイフンなし</span></h3>
            <%= f.text_field :phone, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>パスワード<span class="h5 text-secondary mt-4">※6文字以上</span></h3>
            <%= f.password_field :password, required: true, class: "form-control-lg w-100 mt-2 text-center" %>

          <h3 class="mt-4"><span class="text-info">■</span>パスワード確認用</h3>
            <%= f.password_field :password_confirmation, required: true, class: "form-control-lg w-100 my-2 text-center" %>

          <div class="row">
            <div class="col-10 offset-1 text-center">
              <%= f.submit "会員登録", class: "btn btn-lg btn-outline-info text-dark mt-5 w-100 font-weight-bolder alert-info" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bubbly-bg@1.0.0/dist/bubbly-bg.js" class="public"></script>