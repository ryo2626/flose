<h1>商品詳細・予約者</h1>

<h3 class="mt-3">残り: <%= @commodity.quantity %> 人</h3>


<% @user.each do |u| %>
<table class="table text-center">
  <thead class="thead thead-light">
    <tr>
      <th>予約者
      <th>電話番号
  </thead>
  <tbody class="tbody table-light">
    <tr>
	   <td><%= u.public.lastname_kana %>　<%= u.public.firstname_kana %> 様
	   <td><%= u.public.phone %>
  </tbody>
</table>
<% end %>


<div class="row">
  <div class="col-3 text-center">
    <%= attachment_image_tag @commodity, :commodity_image, :fill, 1000, 1000, size: "200x200", fallback: "no_image.png" %>
  </div>
  <div class="col-9">
    <h3 class="mt-3">商品名　: <%= @commodity.commodity_name %></h3>
    <h3 class="mt-3">コメント: <%= @commodity.comment %></h3>
    <h3 class="mt-3">定価　　: <%= @commodity.regular_price %>円</h3>
    <h3 class="mt-3">販売価格: <%= @commodity.sale_price %></h3>
    <h3 class="mt-3">いつまで:
      <% if @commodity.limit > Time.now %>
        <% @limit = (@commodity.limit - Time.now).to_i / 60 %>
        <% @limit_h = @limit /60 %>
        <% @limit_m = @limit % 60 %>
        残り約<%= @limit_h %>時間<%= @limit_m %>分</h3>
      <% else %>
        販売終了</h3>
      <% end %>
        <h3 class="mt-2">販売形態: <%= @commodity.commodity_category %></h3>
  </div>
</div>

<div id="back">
  <a href="#">
    <%= image_tag 'up.png', :size =>'60x60', class: "img" %>
  </a>
</div>
