<h1>商品新規作成</h1>

<div class="row row1">
	<div class="col-12 text-center text-danger">
		<% if @commodity.errors.any? %>
  		<% @commodity.errors.full_messages.each do |message| %>
    		<h3>・<%= message %></h3>
  		<% end %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-8 offset-2 col-lg-6 offset-lg-3 text-center">
<%= form_for @commodity, url: companies_commodities_path do |f| %>
	<%= f.hidden_field :company_id, :value => current_company.id %>

	<h3 class="mt-3">商品名<span class="h6 text-secondary mt-4">※必須</span></h3>
		<%= f.text_field :commodity_name, :placeholder => "商品名", required: true, class: "form-control-lg w-100" %>

	<h3 class="mt-3">コメント</h3>
		<%= f.text_field :comment, :placeholder => "コメント", class: "form-control-lg w-100" %>

	<h3 class="mt-3">商品画像</h3>
		<%= f.attachment_field :commodity_image %>

	<h3 class="mt-3">定価<span class="h6 text-secondary mt-4">※必須</span></h3>
		<%= f.text_field :regular_price, :placeholder => "定価", required: true, class: "form-control-lg w-100" %>

	<h3 class="mt-3">販売価格<span class="h6 text-secondary mt-4">※必須</span></h3>
		<%= f.text_field :sale_price, :placeholder => "販売価格", required: true, class: "form-control-lg w-100" %>

	<h3 class="mt-3">数量<span class="h6 text-secondary mt-4">※必須</span></h3>
		<%= f.text_field :quantity, :placeholder => "数量", required: true, class: "form-control-lg w-100" %>

	<h3 class="mt-3">何時までに<span class="h6 text-secondary mt-4">※必須</span></h3>
		<%= f.datetime_field :limit, required: true, class: "form-control-lg w-100" %>

	<h3 class="mt-3">販売方法<span class="h6 text-secondary mt-4">※必須</span><br>
		<%= f.radio_button :commodity_category, :買いに来て欲しい %>
    <%= f.label :買いに来て欲しい, class: "commodity_category_label form-control-lg w-80" %>
    <%= f.radio_button :commodity_category, :食べに来て欲しい %>
    <%= f.label :食べに来て欲しい, class: "commodity_category_label form-control-lg w-80" %>
</h3><br>
	<%= f.submit '商品情報更新', class: "btn btn-info btn-lg" %>

<% end %>
</div>
</div>


