<div class="container-fluid">

  <div class ="row">
    <div class =" mx-auto">
      <div class ="col-12">
				<h2>パスワードの再設定</h2>
      </div>

  <div class ="row">
    <div class ="mx-auto">
      <div class ="col-12">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードの再設定" %>
  </div>
<% end %>

<%= render "devise/links" %>

      </div>
    </div>
  </div>

    </div>
  </div>
</div>