<div class="top-box row">
	<div class="text-center col-12 col-lg-6 offset-lg-3">

 		<div class="row">
  		<div class="col-12 col-lg-6 offset-lg-3">
				<h1>お問い合わせ</h1>

				<% if @info.errors.any? %>
					<% @info.errors.full_messages.each do |message| %>
						<h3><%= message %></h3>
					<% end %>
				<% end %>

				<%= form_for @info, url:info_index_path do |f| %>
					<!-- 利用者の場合 -->
					<% if public_signed_in? %>
						<% @user = current_public %>
						<% @status = "利用者" %>
						<% @user_name = @user.lastname + @user.firstname %>
						<%= f.hidden_field :public_id, :value => @user.id %>

					<!-- 企業の場合 -->
					<% elsif company_signed_in? %>
						<% @user = current_company %>
						<% @status = "企業" %>
						<% @user_name = @user.company_name %>
						<%= f.hidden_field :company_id, :value => @user.id %>

					<!-- 未ログインの場合 -->
					<% else %>
						<% @status = "その他" %>
					<% end %>

					<!-- 利用者or企業の場合 -->
					<% if public_signed_in? || company_signed_in? %>
						<%= f.hidden_field :contributor, :value => @user_name %>
						<h3 class="text-warning mt-3">投稿者</h3>
						<h3><%= @user_name %>様</h3>
						<h3 class="text-warning mt-3">メールアドレス</h3>
						<h5>※このアドレスに回答を送信します</h5>
						<%= f.text_field :contributor_email, value: @user.email %>

					<!-- 未ログインの場合 -->
					<% else %>
						<h3 class="text-warning mt-3">投稿者</h3>
						<%= f.text_field :contributor, class: "form-control-lg mt-2 text-center" %>様
						<h3 class="text-warning mt-3">メールアドレス</h3>
						<h5>※このアドレスに回答を送信します</h5>
		  			<%= f.text_field :contributor_email, class: "form-control-lg mt-2 text-center" %>

					<% end %>

					<!-- 共通フォーム -->
					<%= f.hidden_field :user_status, :value => @status %>
					<%= f.hidden_field :info_status, :value => "未回答" %>
					<h3 class="text-warning mt-3">お問い合わせ内容</h3>
					<%= f.text_area :info_content, calss: "mt-2" %>
					<br>
					<%= f.submit '送信する', class:"btn btn-warning" %>

				<% end %>
			</div>
		</div>

	</div>
</div>