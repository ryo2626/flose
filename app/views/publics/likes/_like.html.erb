<div id="like-link-<%= recipe.id %>">
  <% if current_public.likes.find_by(recipe_id: recipe.id) %>
    <%= link_to publics_unlike_path(recipe.id), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i><%= recipe.likes.count %>
    <% end %>
  <% else %>
    <%= link_to publics_like_path(recipe.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i><%= recipe.likes.count %>
    <% end %>
  <% end %>
</div>